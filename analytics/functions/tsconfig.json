{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "ES2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "lib": [
      "ES2020"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
}