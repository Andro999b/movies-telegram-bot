{
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "commonjs": false,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "experimentalDecorators": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "brace-style": ["warn"],
        "arrow-parens": ["warn"]
    },
    "globals": {
        "gtag": "readonly",
        "process": "readonly"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
