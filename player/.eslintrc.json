{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "brace-style": ["warn"],
        "arrow-parens": ["warn"]
    }
}